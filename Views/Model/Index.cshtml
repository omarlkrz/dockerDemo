                            </select>
                        </div>
                        <div class="input-group">
                            <div class="input-group-btn">
                                <!-- Button and dropdown menu -->
                            </div>
                            <input type="text" id="idDescriptionUpdate" class="form-control" aria-label="..." placeholder="Déscription">
                        </div>
                        <div class="input-group">
                            <div class="input-group-btn">
                                <!-- Button and dropdown menu -->
                            </div>
                            <select id="idSNDetUpdate" class="form-control" aria-label="..." placeholder="SN détectable">
