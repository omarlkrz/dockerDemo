                        <th onclick="sortTable2(2)">Fabricant</th>
                        <th onclick="sortTable2(3)">Modèle</th>
                        <th onclick="sortTable2(4)">SN détectable</th>
                        <th onclick="sortTable2(5)">Modèle détectable</th>
                        <th onclick="sortTable2(6)">Propriété</th>

                    </tr>
                    <tbody id="idTBody"></tbody>
                </table>

            </div>

