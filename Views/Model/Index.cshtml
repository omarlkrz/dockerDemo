                <div class="list-group-item-heading">Filtre</div>

                <!-- Table -->
               
                <table class="table">
                    <tr>
                        <th>Type</th>
                        <th>Fabricant</th>
                        <th>Description</th>
                        <th>SN détectable</th>
                        <th>Modèle détectable</th>
                        <th>Propriété</th>

                    </tr>
                    <tr>
                        <td>
                            <div class="dropdown">


